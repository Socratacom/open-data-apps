{
  "node": false,
  "browser": true,
  "esnext": true,
  "bitwise": true,
  "camelcase": true,
  "curly": true,
  "eqeqeq": true,
  "immed": true,
  "indent": 2,
  "latedef": true,
  "newcap": true,
  "noarg": true,
  "quotmark": "single",
  "regexp": true,
  "undef": true,
  "unused": true,

  "strict": false, // Doesn't work well with concat'd files.

  "trailing": true,
  "smarttabs": true,

  "globals": {
    "define": true,
    "$": true,
    "Modernizr": true
  }
}
